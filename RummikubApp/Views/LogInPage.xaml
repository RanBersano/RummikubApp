<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RummikubApp.ViewModels"
             xmlns:m="clr-namespace:RummikubApp.Models"
             x:DataType="vm:LogInPageVM"
             x:Class="RummikubApp.Views.LogInPage"
             Title="LogInPage">
    <VerticalStackLayout Spacing="15" Margin="10">
        <Entry
            Text="{Binding UserName}"
            Placeholder="{x:Static m:Strings.UserName}"
            VerticalOptions="Center"/>
        <Button
            Text="{x:Static m:Strings.LogIn}" 
            Command="{Binding LogInCommand}"/>
    </VerticalStackLayout>
</ContentPage>