<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RummikubApp.Views.LogInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:RummikubApp.Models"
    xmlns:vm="clr-namespace:RummikubApp.ViewModels"
    Title="LogInPage"
    x:DataType="vm:LogInPageVM">
    <VerticalStackLayout Margin="10" Spacing="15">
        <Entry
            Placeholder="{x:Static m:Strings.UserName}"
            Text="{Binding UserName}"
            VerticalOptions="Center" />
        <Entry
            Placeholder="{x:Static m:Strings.Password}"
            Text="{Binding Password}"
            VerticalOptions="Center" />
        <Entry
            Placeholder="{x:Static m:Strings.Email}"
            Text="{Binding Email}"
            VerticalOptions="Center" />
        <Button Command="{Binding LogInCommand}" Text="{x:Static m:Strings.LogIn}" />
    </VerticalStackLayout>
</ContentPage>