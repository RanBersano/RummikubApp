<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RummikubApp.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:RummikubApp.Models"
    xmlns:vm="clr-namespace:RummikubApp.ViewModels"
    x:DataType="vm:GamePageVM">

    <Grid
        Padding="10"
        ColumnDefinitions="Auto,*,Auto"
        RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto,Auto">
        <Label
            Grid.Row="0"
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="{Binding OtherPlayerName1}" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="{Binding OtherPlayerName2}" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="{Binding OtherPlayerName3}" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="10"
            HorizontalOptions="Center"
            Text="{Binding StatusMessage}" />
        <Grid
            x:Name="grdDeck"
            Grid.Row="4"
            Grid.Column="1"
            ColumnSpacing="3"
            HorizontalOptions="Center"
            RowSpacing="3"
            VerticalOptions="Center" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            BackgroundColor = "#C8BFB1"
            HeightRequest="51"
            WidthRequest="40" />
        <Button
            Grid.Row="5"
            Grid.Column="2"
            BackgroundColor = "#C8BFB1"
            HeightRequest="50"
            WidthRequest="40" />
        <BoxView
            Grid.Row="6"
            Grid.ColumnSpan="3"
            Margin="10"
            HeightRequest="170"
            Color="Black" />
        <Label
            Grid.Row="7"
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="{Binding MyName}" />
    </Grid>
</ContentPage>
